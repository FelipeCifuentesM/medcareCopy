<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/item_add_name_document"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_peekHeight="0dp"
    style="@style/DialogStyle"
    android:background="@color/white"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_name_document"
        style="@style/AuthTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:hint="@string/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_name_document"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:theme="@style/InputTextStyle" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Ingrese nombre del documento"
        style="@style/SubTitleHomeTextStyle"
        android:textColor="@color/secondary_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.button.MaterialButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="Hecho"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_name_document"
        android:textColor="@color/subtitle_my_profile"
        android:textSize="@dimen/text_size_body_2"
        android:fontFamily="@font/poppins_medium"
        android:textAllCaps="false"
        android:letterSpacing="0.04"
        app:cornerRadius="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        app:rippleColor="@color/ripple_blue"/>

    <android.support.design.button.MaterialButton
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Cancelar"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textColor="@color/text_color_error"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/til_name_document"
        android:textSize="@dimen/text_size_body_2"
        android:fontFamily="@font/poppins_medium"
        android:textAllCaps="false"
        android:letterSpacing="0.04"
        app:cornerRadius="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        app:rippleColor="@color/ripple_red"/>


</android.support.constraint.ConstraintLayout>