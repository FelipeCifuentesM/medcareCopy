<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_onboarding_bg" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_onboarding_user" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imageView13"
        android:layout_alignTop="@+id/imageView13"
        android:layout_marginTop="-30dp"
        android:layout_marginRight="-45dp"
        app:srcCompat="@drawable/ic_onboarding_mesage_01" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView13"
        android:layout_toRightOf="@+id/imageView13"
        android:layout_marginLeft="-25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_onboarding_message_02" />


    <TextView
        android:id="@+id/textView25"
        style="@style/TitleHomeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Visualiza tus\nestadísticas médicas\nen tiempo real."
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>