<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="258dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="15dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="2dp"
    android:elevation="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/empty_doctor_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_doctor_avatar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/doctor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Doctors Name"
                    style="@style/InfoTextStyle"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="14dp"/>

                <TextView
                    android:id="@+id/invitation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clínica las Condes"
                    android:textSize="12sp"
                    style="@style/InfoTextStyle"
                    android:textColor="@color/black__60"
                    android:layout_marginEnd="14dp"/>

            </LinearLayout>

        </LinearLayout>

        <android.support.design.button.MaterialButton
            android:id="@+id/accept_invitation"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Aceptar invitación"
            android:textColor="@color/white"
            android:padding = "2dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:backgroundTint="@color/green_blue"
            android:textSize="@dimen/text_size_body_2"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            android:letterSpacing="0.04"
            app:cornerRadius="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>