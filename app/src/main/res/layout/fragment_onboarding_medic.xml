<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_onboarding_phone" />

    <ImageView
        android:id="@+id/ic_medic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_phone"
        android:layout_marginLeft="-70dp"
        android:layout_alignBottom="@+id/iv_phone"
        android:layout_marginBottom="-30dp"
        app:srcCompat="@drawable/ic_onboarding_medic" />

    <TextView
        android:id="@+id/tv_text"
        style="@style/TitleHomeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="Mantén el contacto\ncon tu equipo médico" />



</RelativeLayout>