<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:id="@android:id/background">
    <shape>
        <corners android:radius="8dp" />
        <gradient
            android:startColor="#e9ecef"
            android:centerColor="#e9ecef"
            android:centerY="0.75"
            android:endColor="#e9ecef"
            android:angle="270"
            />
    </shape>
</item>

<item
    android:id="@android:id/progress"
    >
    <clip>
        <shape>
            <corners
                android:radius="8dp" />
            <gradient
                android:startColor="@color/marine_blue"
                android:endColor="@color/marine_blue"
                android:angle="270" />
        </shape>
    </clip>
</item>

</layer-list>